<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagmentSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagmentSystem.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-kanban me-2"></i>
                    TaskManagement
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left Navigation -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Right Navigation -->
                    <div class="navbar-nav ms-auto d-flex align-items-center">

                        <!-- Language Switcher -->
                        <div class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-translate me-1"></i>
                                <span class="d-none d-md-inline">Language</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                <li>
                                    <a class="dropdown-item" href="?culture=en">
                                        <i class="bi bi-flag-usa me-2"></i>English
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="?culture=ar">
                                        <i class="bi bi-flag me-2"></i>العربية
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Authentication Section -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Notifications (Only for authenticated users) -->
                            <div class="nav-item me-3">
                                <a class="nav-link position-relative" asp-area="" asp-controller="Notification" asp-action="Show">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span id="unread-notifications-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        0
                                    </span>
                                </a>
                            </div>

                            <!-- User Menu -->
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar me-2">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </div>
                                    <span class="d-none d-md-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-person me-1"></i>
                                            @User.Identity.Name
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Hidden Logout Form -->
                            <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
                                @Html.AntiForgeryToken()
                            </form>
                        }
                        else
                        {
                            <!-- Login/Register Links for non-authenticated users -->
                            <div class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Sign Up
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TaskManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Custom Styles -->
    <style>
        /* Navbar Enhancements */
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .nav-link {
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 6px;
            margin: 0 2px;
            padding: 8px 12px !important;
        }

            .nav-link:hover {
                background-color: rgba(13, 110, 253, 0.1);
                color: #0d6efd !important;
            }

        /* User Avatar */
        .user-avatar {
            color: #6c757d;
            transition: color 0.3s ease;
        }

        .dropdown-toggle:hover .user-avatar {
            color: #0d6efd;
        }

        /* Notification Badge */
        .badge {
            font-size: 0.6rem;
            min-width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Dropdown Enhancements */
        .dropdown-menu {
            border: none;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border-radius: 8px;
            padding: 0.5rem 0;
        }

        .dropdown-item {
            padding: 8px 16px;
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                color: #0d6efd;
            }

        .dropdown-header {
            color: #6c757d;
            font-size: 0.875rem;
            font-weight: 600;
            padding: 8px 16px;
        }

        /* Button Enhancements */
        .btn {
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 0.875rem;
        }

