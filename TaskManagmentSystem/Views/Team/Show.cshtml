@model IEnumerable<TaskManagmentSystem.ViewModels.TeamsShowViewModel>

@{
    ViewData["Title"] = "Teams";
}

<div class="teams-page-wrapper">
    <div class="container-fluid teams-container">
        <!-- Header Section -->
        <div class="teams-header">
            <div class="header-content">
                <div class="title-section">
                    <h1 class="teams-title">
                        <i class="bi bi-people-fill"></i>
                        Teams Management
                    </h1>
                    <p class="teams-subtitle">Manage and view all your teams</p>
                </div>
                <div class="header-actions">
                    <a asp-action="Add" class="btn btn-create">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Add New Team</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Teams Content -->
        <div class="teams-content">
            @if (Model != null && Model.Any())
            {
                <!-- Teams Grid -->
                <div class="teams-grid">
                    @foreach (var team in Model)
                    {
                        <div class="team-card">
                            <div class="team-card-header">
                                <div class="team-info">
                                    <h3 class="team-name">
                                        <i class="bi bi-diagram-3-fill"></i>
                                        @team.Title
                                    </h3>
                                    <div class="team-meta">
                                        <span class="team-date">
                                            <i class="bi bi-calendar-check"></i>
                                            Created: @team.DateCreated.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                </div>
                                <div class="team-status">
                                    <span class="status-badge active">
                                        <i class="bi bi-check-circle-fill"></i>
                                        Active
                                    </span>
                                </div>
                            </div>

                            <div class="team-card-body">
                                @if (!string.IsNullOrEmpty(team.Description))
                                {
                                    <div class="team-description">
                                        <h6>Description</h6>
                                        <p>@team.Description</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="team-description">
                                        <h6>Description</h6>
                                        <p class="no-description">No description provided</p>
                                    </div>
                                }

                                <div class="team-admin">
                                    <h6>Team Administrator</h6>
                                    <div class="admin-info">
                                        <div class="admin-avatar">
                                            <i class="bi bi-person-badge-fill"></i>
                                        </div>
                                        <div class="admin-details">
                                            <span class="admin-name">@team.AdminName</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="team-card-footer">
                                <div class="team-actions">
                                    <a asp-action="Details" asp-route-id="@team.Id" class="btn btn-details">
                                        <i class="bi bi-eye-fill"></i>
                                        <span>Details</span>
                                    </a>
                                    <a asp-controller="Workspace" asp-action="ShowForTeam" asp-route-id="@team.Id" class="btn btn-workspaces">
                                        <i class="bi bi-kanban-fill"></i>
                                        <span>Workspaces</span>
                                    </a>
                                    @if(team.AdminId==team.UserId)
                                    {
                                        <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-edit">
                                            <i class="bi bi-pencil-square"></i>
                                            <span>Edit</span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@team.Id" class="btn btn-delete" onclick="return confirm('Are you sure to delete this team?');">
                                            <i class="bi bi-trash3-fill"></i>
                                            <span>Delete</span>
                                        </a>

                                    }
                                    else
                                    {
                                        <div class="action-btn disabled">
                                            <div class="action-icon">
                                                <i class="bi bi-lock-fill"></i>
                                            </div>
                                            <div class="action-content">
                                                <h6>Admin Only</h6>
                                                <p>Only team admin can edit or delete</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Teams Summary -->
                <div class="teams-summary">
                    <div class="summary-card">
                        <div class="summary-icon">
                            <i class="bi bi-bar-chart-fill"></i>
                        </div>
                        <div class="summary-info">
                            <h4>Total Teams</h4>
                            <p class="summary-count">@Model.Count()</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="empty-state-content">
                        <div class="empty-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3>No Teams Found</h3>
                        <p>You haven't created any teams yet. Start by creating your first team to organize your work better.</p>
                        <a asp-action="Add" class="btn btn-create-first">
                            <i class="bi bi-plus-circle-fill"></i>
                            <span>Create Your First Team</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Root Variables */
    :root {
        --primary-color: #6366f1;
        --primary-hover: #5855eb;
        --success-color: #10b981;
        --success-hover: #059669;
        --warning-color: #f59e0b;
        --warning-hover: #d97706;
        --danger-color: #ef4444;
        --danger-hover: #dc2626;
        --info-color: #3b82f6;
        --info-hover: #2563eb;
        --purple-color: #8b5cf6;
        --purple-hover: #7c3aed;
        --secondary-color: #6b7280;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --text-muted: #9ca3af;
        --border-color: #e5e7eb;
        --background-light: #f8fafc;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 12px;
        --radius-sm: 8px;
    }

    /* Main Container */
    .teams-page-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .teams-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Header Styles */
    .teams-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .title-section {
        flex: 1;
    }

    .teams-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, var(--primary-color), #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .teams-subtitle {
        color: var(--text-secondary);
        margin: 0.5rem 0 0 0;
        font-size: 1.1rem;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.25rem;
        border-radius: var(--radius-sm);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
        border: 2px solid;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-create,
    .btn-create-first {
        background: var(--success-color);
        color: white;
        border-color: var(--success-color);
    }

        .btn-create:hover,
        .btn-create-first:hover {
            background: var(--success-hover);
            border-color: var(--success-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

    /* Teams Grid */
    .teams-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .teams-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 2rem;
    }

    /* Team Card */
    .team-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .team-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 10px 10px -5px rgb(0 0 0 / 0.04);
        }

    .team-card-header {
        background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .team-info {
        flex: 1;
    }

    .team-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 0.75rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .team-name i {
            color: var(--primary-color);
        }

    .team-meta {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .team-id,
    .team-date {
        font-size: 0.875rem;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .team-status {
        flex-shrink: 0;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

        .status-badge.active {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success-color);
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

    /* Team Card Body */
    .team-card-body {
        padding: 1.5rem;
    }

    .team-description,
    .team-admin {
        margin-bottom: 1.5rem;
    }

        .team-description:last-child,
        .team-admin:last-child {
            margin-bottom: 0;
        }

        .team-description h6,
        .team-admin h6 {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0 0 0.5rem 0;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .team-description p {
            color: var(--text-secondary);
            margin: 0;
            line-height: 1.5;
        }

    .no-description {
        font-style: italic;
        color: var(--text-muted) !important;
    }

    .admin-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .admin-avatar {
        width: 40px;
        height: 40px;
        background: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .admin-details {
        display: flex;
        flex-direction: column;
    }

    .admin-name {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.95rem;
    }

    .admin-id {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* Team Card Footer */
    .team-card-footer {
        background: var(--background-light);
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .team-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .btn-details {
        background: rgba(59, 130, 246, 0.1);
        color: var(--info-color);
        border-color: var(--info-color);
        flex: 1;
        justify-content: center;
        min-width: 80px;
    }

        .btn-details:hover {
            background: var(--info-color);
            color: white;
            transform: translateY(-1px);
        }

    .btn-workspaces {
        background: rgba(139, 92, 246, 0.1);
        color: var(--purple-color);
        border-color: var(--purple-color);
        flex: 1;
        justify-content: center;
        min-width: 80px;
    }

        .btn-workspaces:hover {
            background: var(--purple-color);
            color: white;
            transform: translateY(-1px);
        }

    .btn-edit {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning-color);
        border-color: var(--warning-color);
        flex: 1;
        justify-content: center;
        min-width: 80px;
    }

        .btn-edit:hover {
            background: var(--warning-color);
            color: white;
            transform: translateY(-1px);
        }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger-color);
        border-color: var(--danger-color);
        flex: 1;
        justify-content: center;
        min-width: 80px;
    }

        .btn-delete:hover {
            background: var(--danger-color);
            color: white;
            transform: translateY(-1px);
        }

    /* Teams Summary */
    .teams-summary {
        display: flex;
        justify-content: center;
    }

    .summary-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        padding: 2rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        gap: 1.5rem;
        min-width: 250px;
    }

    .summary-icon {
        width: 60px;
        height: 60px;
        background: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .summary-info h4 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 0.25rem 0;
    }

    .summary-count {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin: 0;
    }

    /* Empty State */
    .empty-state {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }

    .empty-state-content {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        padding: 3rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
        max-width: 500px;
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--text-muted);
        margin-bottom: 1.5rem;
    }

    .empty-state-content h3 {
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 1rem 0;
    }

    .empty-state-content p {
        color: var(--text-secondary);
        margin: 0 0 2rem 0;
        line-height: 1.6;
        font-size: 1.1rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .teams-page-wrapper

    {
        padding: 1rem 0;
    }

    .header-content {
        flex-direction: column;
        align-items: flex-start;
    }

    .teams-grid {
        grid-template-columns: 1fr;
    }

    .team-card-header {
        flex-direction: column;
        gap: 1rem;
    }

    .team-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .teams-title {
        font-size: 2rem;
    }

    .empty-state-content {
        padding: 2rem;
        margin: 0 1rem;
    }

    }

    @@media (max-width: 480px) {
        .team-card-body

    {
        padding: 1rem;
    }

    .team-card-footer {
        padding: 1rem;
    }

    .summary-card {
        flex-direction: column;
        text-align: center;
    }

    }
</style>