@model List<TaskManagmentSystem.ViewModels.TeamInvitationsShowViewModel>

@{
    ViewData["Title"] = "Sent Invitations";
}

<div class="invitations-wrapper">
    <div class="container-fluid invitations-container">
        <!-- Header Section -->
        <div class="invitations-header">
            <div class="header-content">
                <div class="title-section">
                    <h1 class="invitations-title">
                        <i class="bi bi-envelope-fill"></i>
                        Team Invitations
                    </h1>
                    <p class="invitations-subtitle">Manage your team invitations</p>
                </div>
                <div class="header-actions">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-back">
                        <i class="bi bi-arrow-left"></i>
                        <span>Back to Home</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="invitations-nav">
            <div class="nav-tabs">
                <a asp-action="ShowReceived" class="nav-tab">
                    <i class="bi bi-inbox-fill"></i>
                    <span>Received Invitations</span>
                </a>
                <a asp-action="ShowSent" class="nav-tab active">
                    <i class="bi bi-send-fill"></i>
                    <span>Sent Invitations</span>
                    @if (Model != null && Model.Any())
                    {
                        <span class="nav-badge">@Model.Count()</span>
                    }
                </a>
            </div>
        </div>

        <!-- Invitations Content -->
        <div class="invitations-content">
            @if (Model != null && Model.Any())
            {
                <div class="invitations-grid">
                    @foreach (var invitation in Model)
                    {
                        <div class="invitation-card @GetStatusClass(invitation.Status)">
                            <div class="invitation-header">
                                <div class="invitation-info">
                                    <div class="recipient-info">
                                        <div class="recipient-avatar">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                        <div class="recipient-details">
                                            <h4 class="recipient-name">@invitation.OtherUserName</h4>
                                            <p class="invitation-date">
                                                <i class="bi bi-calendar3"></i>
                                                Sent on @invitation.SendOn.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="status-badge @GetStatusClass(invitation.Status)">
                                        <i class="@GetStatusIcon(invitation.Status)"></i>
                                        <span>@invitation.Status.ToString()</span>
                                    </div>
                                </div>
                            </div>

                            <div class="invitation-body">
                                <div class="team-info">
                                    <div class="team-icon">
                                        <i class="bi bi-diagram-3-fill"></i>
                                    </div>
                                    <div class="team-details">
                                        <h5>Team: @invitation.TeamName</h5>
                                        <p>Invitation to join your team</p>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(invitation.Message))
                                {
                                    <div class="invitation-message">
                                        <div class="message-header">
                                            <i class="bi bi-chat-quote-fill"></i>
                                            <span>Your Message</span>
                                        </div>
                                        <div class="message-content">
                                            "@invitation.Message"
                                        </div>
                                    </div>
                                }

                                <div class="invitation-status-info">
                                    <div class="status-info-item">
                                        <i class="@GetStatusIcon(invitation.Status)"></i>
                                        <div class="status-details">
                                            <h6>@GetStatusTitle(invitation.Status)</h6>
                                            <p>@GetStatusDescription(invitation.Status)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="invitation-actions">
                                @if (invitation.Status == InvitationStatus.Pending)
                                {                                    
                                    <a asp-controller="TeamInvitation" asp-action="Cancel" asp-route-id="@invitation.Id" class="btn btn-cancel-invitation">
                                        <i class="bi bi-x-circle-fill"></i>
                                        <span>Cancel Invitation</span>
                                    </a>

                                    <div class="action-info">
                                        <i class="bi bi-info-circle"></i>
                                        <span>You can cancel this invitation while it's pending</span>
                                    </div>
                                }
                                else if (invitation.Status == InvitationStatus.Accepted)
                                {
                                    <div class="response-info success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>@invitation.OtherUserName accepted your invitation and joined the team!</span>
                                    </div>
                                }
                                else if (invitation.Status == InvitationStatus.Rejected)
                                {
                                    <div class="response-info rejected">
                                        <i class="bi bi-x-circle-fill"></i>
                                        <span>@invitation.OtherUserName declined your invitation</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Summary Stats -->
                <div class="invitations-summary">
                    <div class="summary-cards">
                        <div class="summary-card pending">
                            <div class="summary-icon">
                                <i class="bi bi-clock-fill"></i>
                            </div>
                            <div class="summary-info">
                                <h4>@Model.Count(i => i.Status == InvitationStatus.Pending)</h4>
                                <p>Pending</p>
                            </div>
                        </div>

                        <div class="summary-card accepted">
                            <div class="summary-icon">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="summary-info">
                                <h4>@Model.Count(i => i.Status == InvitationStatus.Accepted)</h4>
                                <p>Accepted</p>
                            </div>
                        </div>

                        <div class="summary-card rejected">
                            <div class="summary-icon">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                            <div class="summary-info">
                                <h4>@Model.Count(i => i.Status == InvitationStatus.Rejected)</h4>
                                <p>Rejected</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-content">
                        <div class="empty-icon">
                            <i class="bi bi-send"></i>
                        </div>
                        <h3>No Sent Invitations</h3>
                        <p>You haven't sent any team invitations yet. Start building your team by inviting members!</p>
                        <a asp-action="ShowReceived" class="btn btn-view-received">
                            <i class="bi bi-inbox"></i>
                            <span>View Received Invitations</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusClass(InvitationStatus status)
    {
        return status switch
        {
            InvitationStatus.Pending => "status-pending",
            InvitationStatus.Accepted => "status-accepted",
            InvitationStatus.Rejected => "status-rejected",
            _ => "status-pending"
        };
    }

    private string GetStatusIcon(InvitationStatus status)
    {
        return status switch
        {
            InvitationStatus.Pending => "bi bi-clock-fill",
            InvitationStatus.Accepted => "bi bi-check-circle-fill",
            InvitationStatus.Rejected => "bi bi-x-circle-fill",
            _ => "bi bi-clock-fill"
        };
    }

    private string GetStatusTitle(InvitationStatus status)
    {
        return status switch
        {
            InvitationStatus.Pending => "Waiting for Response",
            InvitationStatus.Accepted => "Invitation Accepted",
            InvitationStatus.Rejected => "Invitation Declined",
            _ => "Unknown Status"
        };
    }

    private string GetStatusDescription(InvitationStatus status)
    {
        return status switch
        {
            InvitationStatus.Pending => "The user hasn't responded to your invitation yet.",
            InvitationStatus.Accepted => "The user accepted your invitation and joined the team.",
            InvitationStatus.Rejected => "The user declined your invitation to join the team.",
            _ => "Status information unavailable."
        };
    }
}

