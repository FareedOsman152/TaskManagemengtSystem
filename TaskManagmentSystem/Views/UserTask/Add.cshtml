@model TaskManagmentSystem.ViewModels.UserTaskAddViewModel

@{
    ViewData["Title"] = "Add Task";
}

<div class="form-page-wrapper">
    <div class="container-fluid form-container">
        <!-- Header Section -->
        <div class="form-header">
            <div class="header-content">
                <div class="title-section">
                    <h1 class="form-title">
                        <i class="bi bi-plus-square-fill"></i>
                        Add New Task
                    </h1>
                    <p class="form-subtitle">Create a new task to track your work progress</p>
                </div>
                <a asp-action="ShowAll" asp-controller="TaskList" asp-route-id="@Model.WorkSpaceId" class="btn btn-back">
                    <i class="bi bi-arrow-left"></i>
                    <span>Back to Board</span>
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <div class="form-card">
            <div class="form-card-header">
                <h3 class="card-title">Task Information</h3>
                <p class="card-subtitle">Fill in the details below to create your new task</p>
            </div>

            <div class="form-card-body">
                <form asp-action="SaveAdd" class="modern-form">
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <input asp-for="TaskListId" type="hidden" />
                    <input asp-for="WorkSpaceId" type="hidden" />

                    <!-- Basic Information -->
                    <div class="form-section">
                        <h4 class="section-title">Basic Information</h4>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Title" class="form-label">
                                    <i class="bi bi-card-heading"></i>
                                    Task Title
                                </label>
                                <input asp-for="Title" class="form-input" placeholder="Enter task title..." />
                                <span asp-validation-for="Title" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-file-text"></i>
                                    Description
                                </label>
                                <textarea asp-for="Description" class="form-textarea" rows="4" placeholder="Enter task description..."></textarea>
                                <span asp-validation-for="Description" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Task Properties -->
                    <div class="form-section">
                        <h4 class="section-title">Task Properties</h4>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-flag"></i>
                                    Status
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="NotStarted">Not Started</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="OnHold">On Hold</option>
                                </select>
                                <span asp-validation-for="Status" class="validation-error"></span>
                            </div>

                            <div class="form-group half-width">
                                <label asp-for="Priority" class="form-label">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Priority
                                </label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="None">None</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                                <span asp-validation-for="Priority" class="validation-error"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Color" class="form-label">
                                    <i class="bi bi-palette"></i>
                                    Color Theme
                                </label>
                                <div class="color-picker">
                                    <input type="radio" asp-for="Color" value="None" id="color-none" checked />
                                    <label for="color-none" class="color-option color-none">
                                        <span class="color-circle"></span>
                                        <span class="color-name">None</span>
                                    </label>

                                    <input type="radio" asp-for="Color" value="Red" id="color-red" />
                                    <label for="color-red" class="color-option color-red">
                                        <span class="color-circle"></span>
                                        <span class="color-name">Red</span>
                                    </label>

                                    <input type="radio" asp-for="Color" value="Blue" id="color-blue" />
                                    <label for="color-blue" class="color-option color-blue">
                                        <span class="color-circle"></span>
                                        <span class="color-name">Blue</span>
                                    </label>

                                    <input type="radio" asp-for="Color" value="Green" id="color-green" />
                                    <label for="color-green" class="color-option color-green">
                                        <span class="color-circle"></span>
                                        <span class="color-name">Green</span>
                                    </label>

                                    <input type="radio" asp-for="Color" value="Yellow" id="color-yellow" />
                                    <label for="color-yellow" class="color-option color-yellow">
                                        <span class="color-circle"></span>
                                        <span class="color-name">Yellow</span>
                                    </label>

                                    <input type="radio" asp-for="Color" value="Gray" id="color-gray" />
                                    <label for="color-gray" class="color-option color-gray">
                                        <span class="color-circle"></span>
                                        <span class="color-name">Gray</span>
                                    </label>
                                </div>
                                <span asp-validation-for="Color" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Schedule -->
                    <div class="form-section">
                        <h4 class="section-title">Schedule</h4>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="BeginOn" class="form-label">
                                    <i class="bi bi-calendar-event"></i>
                                    Start Date
                                </label>
                                <input asp-for="BeginOn" type="datetime-local" class="form-input" />
                                <span asp-validation-for="BeginOn" class="validation-error"></span>
                            </div>

                            <div class="form-group half-width">
                                <label asp-for="EndOn" class="form-label">
                                    <i class="bi bi-calendar-check"></i>
                                    End Date
                                </label>
                                <input asp-for="EndOn" type="datetime-local" class="form-input" />
                                <span asp-validation-for="EndOn" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Reminders Section -->
                    <div class="form-section">
                        <h4 class="section-title">Reminders</h4>
                        <p class="section-description">Set up notifications to remind you before task deadlines</p>

                        <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="RemindMeBeforeBegin" class="form-label">
                                    <i class="bi bi-alarm"></i>
                                    Remind Before Start
                                </label>
                                <select asp-for="RemindMeBeforeBegin" class="form-select reminder-select">
                                    <option value="5">5 minutes before</option>
                                    <option value="10">10 minutes before</option>
                                    <option value="15" selected>15 minutes before</option>
                                    <option value="30">30 minutes before</option>
                                    <option value="60">1 hour before</option>
                                </select>
                                <span asp-validation-for="RemindMeBeforeBegin" class="validation-error"></span>
                                <small class="form-help">Get notified before the task start time</small>
                            </div>

                            <div class="form-group half-width">
                                <label asp-for="RemindMeBeforeEnd" class="form-label">
                                    <i class="bi bi-bell"></i>
                                    Remind Before End
                                </label>
                                <select asp-for="RemindMeBeforeEnd" class="form-select reminder-select">
                                    <option value="5">5 minutes before</option>
                                    <option value="10">10 minutes before</option>
                                    <option value="15" selected>15 minutes before</option>
                                    <option value="30">30 minutes before</option>
                                    <option value="60">1 hour before</option>
                                </select>
                                <span asp-validation-for="RemindMeBeforeEnd" class="validation-error"></span>
                                <small class="form-help">Get notified before the task deadline</small>
                            </div>
                        </div>

                        <!-- Reminder Info Box -->
                        <div class="reminder-info">
                            <div class="info-icon">
                                <i class="bi bi-info-circle"></i>
                            </div>
                            <div class="info-content">
                                <h6>About Reminders</h6>
                                <p>You'll receive notifications via email and in-app alerts at the specified times. Make sure your notification preferences are enabled.</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-create">
                            <i class="bi bi-plus-circle-fill"></i>
                            <span>Create Task</span>
                        </button>
                        <a asp-action="ShowAll" asp-controller="TaskList" asp-route-id="@Model.WorkSpaceId" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            <span>Cancel</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Root Variables */
    :root {
        --primary-color: #6366f1;
        --primary-hover: #5855eb;
        --success-color: #10b981;
        --success-hover: #059669;
        --danger-color: #ef4444;
        --danger-hover: #dc2626;
        --warning-color: #f59e0b;
        --secondary-color: #6b7280;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --text-muted: #9ca3af;
        --border-color: #e5e7eb;
        --background-light: #f8fafc;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 12px;
        --radius-sm: 8px;
        /* Color Variables */
        --color-red: #ef4444;
        --color-blue: #3b82f6;
        --color-green: #10b981;
        --color-yellow: #f59e0b;
        --color-gray: #6b7280;
    }

    /* Main Container */
    .form-page-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Header Styles */
    .form-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .title-section {
        flex: 1;
    }

    .form-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, var(--primary-color), #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .form-subtitle {
        color: var(--text-secondary);
        margin: 0.5rem 0 0 0;
        font-size: 1.1rem;
    }

    .btn-back {
        background: rgba(107, 114, 128, 0.1);
        color: var(--secondary-color);
        border: 2px solid var(--secondary-color);
        padding: 0.75rem 1.25rem;
        border-radius: var(--radius-sm);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.95rem;
    }

        .btn-back:hover {
            background: var(--secondary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    /* Form Card */
    .form-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
    }

    .form-card-header {
        background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        padding: 2rem;
        border-bottom: 1px solid var(--border-color);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 0.5rem 0;
    }

    .card-subtitle {
        color: var(--text-secondary);
        margin: 0;
        font-size: 1rem;
    }

    .form-card-body {
        padding: 2rem;
    }

    /* Form Sections */
    .form-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(229, 231, 235, 0.5);
    }

        .form-section:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
        }

    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .section-title::before {
            content: "";
            width: 4px;
            height: 1.25rem;
            background: var(--primary-color);
            border-radius: 2px;
        }

    .section-description {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin: 0 0 1.5rem 0;
        line-height: 1.5;
    }

    /* Form Styles */
    .modern-form {
        max-width: 100%;
    }

    .form-row {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .form-group {
        flex: 1;
        min-width: 250px;
    }

        .form-group.half-width {
            flex: 0 0 calc(50% - 0.75rem);
        }

    .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .form-input,
    .form-textarea,
    .form-select {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--border-color);
        border-radius: var(--radius-sm);
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
        color: var(--text-primary);
    }

        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            transform: translateY(-1px);
        }

    .form-textarea {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
    }

    .form-select {
        cursor: pointer;
    }

    /* Reminder Select Styling */
    .reminder-select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.5rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        padding-right: 2.5rem;
    }

    .form-help {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.875rem;
        color: var(--text-muted);
        font-style: italic;
    }

    /* Reminder Info Box */
    .reminder-info {
        display: flex;
        gap: 1rem;
        background: rgba(99, 102, 241, 0.05);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: var(--radius-sm);
        padding: 1rem;
        margin-top: 1rem;
    }

    .info-icon {
        color: var(--primary-color);
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .info-content h6 {
        color: var(--text-primary);
        font-weight: 600;
        margin: 0 0 0.25rem 0;
        font-size: 0.95rem;
    }

    .info-content p {
        color: var(--text-secondary);
        margin: 0;
        font-size: 0.875rem;
        line-height: 1.4;
    }

    /* Color Picker */
    .color-picker {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

        .color-picker input[type="radio"] {
            display: none;
        }

    .color-option {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        padding: 0.75rem;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
        border: 2px solid transparent;
    }

        .color-option:hover {
            background: rgba(0, 0, 0, 0.05);
        }

    .color-picker input[type="radio"]:checked + .color-option {
        border-color: var(--primary-color);
        background: rgba(99, 102, 241, 0.1);
    }

    .color-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid var(--border-color);
    }

    .color-none .color-circle {
        background: white;
        border: 2px dashed var(--border-color);
    }

    .color-red .color-circle {
        background: var(--color-red);
    }

    .color-blue .color-circle {
        background: var(--color-blue);
    }

    .color-green .color-circle {
        background: var(--color-green);
    }

    .color-yellow .color-circle {
        background: var(--color-yellow);
    }

    .color-gray .color-circle {
        background: var(--color-gray);
    }

    .color-name {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-secondary);
    }

    /* Validation Styles */
    .validation-summary {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: var(--danger-color);
        padding: 1rem;
        border-radius: var(--radius-sm);
        margin-bottom: 1.5rem;
    }

    .validation-error {
        color: var(--danger-color);
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        font-weight: 500;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: var(--radius-sm);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        font-size: 1rem;
        border: 2px solid;
        min-width: 140px;
        justify-content: center;
    }

    .btn-create {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }

        .btn-create:hover {
            background: var(--primary-hover);
            border-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

    .btn-cancel {
        background: white;
        color: var(--secondary-color);
        border-color: var(--secondary-color);
    }

        .btn-cancel:hover {
            background: var(--secondary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-group.half-width

    {
        flex: 1;
        min-width: 100%;
    }

    .reminder-info {
        flex-direction: column;
        gap: 0.5rem;
    }

    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}