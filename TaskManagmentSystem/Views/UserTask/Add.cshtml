@model TaskManagmentSystem.ViewModels.UserTaskAddViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>UserTaskAddViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="TaskListId" type="hidden" class="form-control" />
            <input asp-for="WorkSpaceId" type="hidden" class="form-control" />
            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginOn" class="control-label"></label>
                <input asp-for="BeginOn" class="form-control" />
                <span asp-validation-for="BeginOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOn" class="control-label"></label>
                <input asp-for="EndOn" class="form-control" />
                <span asp-validation-for="EndOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAll" asp-controller="TaskList">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
