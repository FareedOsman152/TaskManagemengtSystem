@model TaskManagmentSystem.ViewModels.TaskListWithWorkSpaceIdViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkSpaceId" />
            <div class="form-group">
                <label asp-for="Tilte" class="control-label"></label>
                <input asp-for="Tilte" class="form-control" />
                <span asp-validation-for="Tilte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="showAll">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
