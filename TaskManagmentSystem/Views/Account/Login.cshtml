@inject IViewLocalizer Localizer
@model TaskManagmentSystem.ViewModels.UserForLogin

@{
    ViewData["Title"] = "Login";
}
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 style="text-align:center;">@Localizer["Login"]</h1>
        <!-- Login Card Only -->
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>@Localizer["Login"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SaveLogin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">@Localizer["Remember me"]</label>
                        </div>

                        <div class="form-group mb-3">
                            <input type="submit" value="@Localizer["Login"]" class="btn btn-primary w-100" />
                        </div>
                    </form>

                    <div class="text-center mt-2">
                        <a asp-action="Register" class="text-decoration-none">@Localizer["Don't have an account? Sign Up"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}