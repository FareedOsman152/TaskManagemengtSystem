@model List<TaskManagmentSystem.Models.WorkSpace>

@{
    ViewData["Title"] = "Work Spaces";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Your Work Spaces</h1>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var workspace in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@workspace.Title</h5>
                            <p class="card-text">@(workspace.Discription ?? "No description provided")</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="#" class="btn btn-outline-primary btn-sm">View Tasks</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You don't have any workspaces yet. <a asp-action="Create" asp-controller="WorkSpace" class="alert-link">Create your first workspace</a>.
        </div>
    }
</div>

<!-- Bootstrap Icons (add in _Layout.cshtml if not already present) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">